<Project>

    <UsingTask TaskName="PathResolutionTask" AssemblyFile="Sisyphus.Build.dll"/>
    <UsingTask TaskName="AssemblyResolutionTask"
               AssemblyFile="Sisyphus.Build.dll"/>

    <!-- Set general build properties understood to be good defaults for any
         mods using sisyphus. -->
    <PropertyGroup>
        <DebugSymbols>true</DebugSymbols>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    </PropertyGroup>

    <!-- Resolve game paths and import assemblies as necessary. -->
    <PropertyGroup>
        <!--<PathResolutionTask>
            <Output TaskParameter="GamePath" ItemName="_UKGamePath"/>
            <Output TaskParameter="AssemblyPath" ItemName="_UKAssemblyPath"/>
        </PathResolutionTask>

        <UKGamePath>@(_UKGamePath)</UKGamePath>
        <UKAssemblyPath>@(_UKAssemblyPath)</UKAssemblyPath>-->
    </PropertyGroup>

    <Target Name="AddAssemblies" BeforeTargets="ResolveAssemblyReferences">
        <AssemblyResolutionTask>
            <Output TaskParameter="Assemblies" ItemName="_Assemblies"/>
        </AssemblyResolutionTask>
        <ItemGroup>
            <!-- TODO: Don't copy these? pl0x -->
            <Reference Include="@(_Assemblies)"/>
        </ItemGroup>
    </Target>

</Project>