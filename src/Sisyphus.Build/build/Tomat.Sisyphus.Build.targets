<Project>
    
    <PropertyGroup>
        <!-- Define this property as we don't want to do anything if someone
             decides to use Sisyphus.Build actual utilities (i.e. for unit
             testing or some other scenario in which we'd want to instead just
             access provided members). -->
        <SisyphusBuild Condition="'$(SisyphusBuild)' == ''">
            enable
        </SisyphusBuild>
    </PropertyGroup>
    
    <!-- Set general build properties understood to be good defaults for any
         mods using sisyphus. -->
    <PropertyGroup Condition="'$(SisyphusBuild)' == 'enable'">
        <DebugSymbols>true</DebugSymbols>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    </PropertyGroup>
    
</Project>